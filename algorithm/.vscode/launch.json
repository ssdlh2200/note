{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug c/cpp msvc",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\out\\",
            "environment": [],
            
            //调试前执行编译源文件
            "preLaunchTask": "compile c/cpp msvc",
            
            "logging": {
                
                "moduleLoad": false,
                "engineLogging": false,
                "programOutput": false
            },
            

            "console": "integratedTerminal",
            //不会自动聚焦调试控制台
            "internalConsoleOptions": "neverOpen"
            
            
        }
        
    ]
}