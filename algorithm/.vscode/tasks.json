{
    "tasks": [
        {
            "label": "compile c++",
            "type": "cppbuild",
            "command": "E:\\developmentSoftware\\minGW\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "compile and run c++",
            "type": "shell",
            "command": "E:\\developmentSoftware\\minGW\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
                ";",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile and run java",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}",
                "-encoding",
                "UTF-8",
                "-d",
                "${workspaceFolder}\\out",
                ";",
                "java",
                "-cp",
                "${workspaceFolder}\\out",
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "auto compile and run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "if ('${fileExtname}' -eq '.cpp') { g++ -fdiagnostics-color=always -g \"${file}\" -o \"${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe\"; & \"${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe\" } else { javac -encoding UTF-8 \"${file}\" -d \"${workspaceFolder}\\out\"; java -cp \"${workspaceFolder}\\out\" \"${fileBasenameNoExtension}\" }"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}