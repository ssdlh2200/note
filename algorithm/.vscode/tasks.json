{
    "tasks": [
        {
            "label": "compile c++",
            "type": "cppbuild",
            "command": "E:\\developmentSoftware\\minGW\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "compile and run cpp",
            "type": "shell",
            "command": "E:\\developmentSoftware\\minGW\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
                ";",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile and run java",
            "type": "shell",
            "command": "",
            "args": [
                "====Running Java====",
                ";",
                "javac",
                "${file}",
                "-encoding",
                "UTF-8",
                "-d",
                "${workspaceFolder}\\out",
                ";",
                "java",
                "-cp",
                "${workspaceFolder}\\out",
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                //是否显示命令本身
                "echo": false,

                //是否总是打开终端
                "reveal": "always",

                //是否获取终端焦点
                "focus": false,

                //所有任务公用一个终端
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}