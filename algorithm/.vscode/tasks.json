        {
            "label": "compile and run java",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host '==== Running Java ====' -ForegroundColor Black -BackgroundColor Gray",
                ";",
                "javac",
                "${file}",
                "-encoding",
                "UTF-8",
                "-d",
                "${workspaceFolder}\\out",
                ";",
                "java",
                "-cp",
                "${workspaceFolder}\\out",
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                //是否显示命令本身
                "echo": false,
                //是否总是打开终端
                "reveal": "always",
                //是否获取终端焦点
                "focus": false,
                //所有任务公用一个终端
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ],
    "version": "2.0.0"
}