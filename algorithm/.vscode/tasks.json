{
    "tasks": [
        {
            "label": "compile c/cpp msvc",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host '==== Compiling C/Cpp-MSVC ====' -ForegroundColor Black -BackgroundColor Gray",
                ";",
                //cl /EHsc /source-charset:utf-8 /execution-charset:utf-8 /Fe:solution.exe solution.cpp
                "cl",
                "/EHsc",
                "/Zi",
                "/nologo",
                "/source-charset:utf-8",
                "/execution-charset:utf-8",
                "/Fd:${workspaceFolder}\\out\\${fileBasenameNoExtension}.pdb",
                "/Fo:${workspaceFolder}\\out\\${fileBasenameNoExtension}.obj",
                "/Fe:${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",
                "${file}",
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run c/cpp",
            "dependsOn": "compile c/cpp msvc",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host '==== Running C/Cpp ====' -ForegroundColor Black -BackgroundColor Gray",
                ";",
                "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

